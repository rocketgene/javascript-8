doctype html
head
  title Books
  link(href='/stylesheets/style.css' rel='stylesheet')
h1 Books

include search

p
  a.button(href='/books/new') Create New Book
table
  thead
    tr
      th Title
      th Author
      th Genre
      th Year
  tbody
    each book in books
      book
        tr
          td 
            a(href='/books/' + book.id)= book.title
          td= book.author
          td= book.genre
          td= book.year 

- var i = 1
ul 
  while i < (count/2)+1
    a.button(href=`/books/page/${i}`) #{i++}



